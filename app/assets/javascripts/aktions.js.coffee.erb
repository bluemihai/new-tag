$(document).ready ->
  $('#aktions-table').DataTable
    autoWidth: false
    searching: false
    order: [0, 'desc']
    pageLength: 25
    lengthMenu: [ [10, 25, 50, -1], [10, 25, 50, 'All'] ]
    language: lengthMenu: 'Display _MENU_ Actions'

  $('#aktion_team_id').change ->
    val = $('#aktion_team_id').val()
    console.log 'val', val
    roles = <%= Role.for_select %>
    console.log 'roles', roles
    $('#aktion_role_id').html(roles[val])
    projects = <%= Project.for_select %>
    $('#aktion_project_id').html(projects[val])