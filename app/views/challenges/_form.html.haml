= simple_form_for(@challenge) do |f|
  = f.error_notification

  .form-inputs
    / = f.input :weekly
    / = f.input :starting
    / = f.input :ending
    .large-3.medium-3.small-6.columns= f.input :item_type, collection: Challenge::TYPES
    .large-3.medium-3.small-6.columns= f.input :operation_type, collection: Challenge::OPERATIONS
    .large-3.medium-3.small-6.columns= f.input :greater_than
    .large-3.medium-3.small-6.columns= f.input :less_than
    .large-9.medium-9.small-12.columns= f.input :comments
    .large-3.medium-3.small-6.columns= f.association :creator
    .large-3.medium-3.small-6.columns
      = f.input :daily
      = f.input :available
    %hr

  .form-actions
    = f.button :submit
