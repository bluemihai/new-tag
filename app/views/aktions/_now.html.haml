- current_actions = Aktion.current
- if current_actions
  .medium-12.block
    .header.text-center.today-title
      %span.yellow-text= link_to 'NOW', '#'
    .today-summary.text-center
      = "#{current_actions.count} playing"
    .text-center
      - current_actions.each do |a|
        - title = a.player.first_name + ': ' + a.focus
        - title += ' (' + a.verb.try(:name) + ' for ' + a.team.try(:name)
        - title += ', project: ' + a.project.try(:name) + ')'
        = link_to (image_tag a.player.gravatar), a.player, title: title
