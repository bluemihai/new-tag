- if params.has_key?(:edit) || @aktion.status == 'stopped'
  .large-12.medium-12.columns= f.input :intensity, collection: INTENSITIES, include_blank: true, prompt: INTENSITY_PROMPT, label: false
  .large-6.medium-6.small-6.text-center.columns= f.button :submit, "COUNT IT"
  .large-6.medium-6.small-6.text-center.columns= f.button :submit, "MISSED IT"
  %hr
  .large-6.medium-12.columns= f.input :stop, as: :boolean, inline_label: 'enjoyed break', autofocus: true
  .large-6.medium-12.columns= f.input :restroom, as: :boolean, inline_label: 'restroom'
  .large-6.medium-12.columns= f.input :water, as: :boolean, inline_label: 'water'
  .large-6.medium-12.columns= f.input :snack, as: :boolean, inline_label: 'snack'
  .large-6.medium-12.columns= f.input :stretch, as: :boolean, inline_label: 'stretch'
  .large-6.medium-12.columns= f.input :tidy, as: :boolean, inline_label: 'tidy up'
  .large-6.medium-12.columns= f.input :games, as: :boolean, inline_label: 'games'
  .large-6.medium-12.columns= f.input :friends, as: :boolean, inline_label: 'friends'
  .large-6.medium-12.columns= f.input :music, as: :boolean, inline_label: 'music'
  .large-6.medium-12.columns= f.input :change, as: :boolean, inline_label: 'change'
  .large-2.columns= f.input :pushups, as: :string, label: false
  .large-4.columns push-ups
  .large-6.medium-12.columns= f.input :situps, as: :string, label: 'sit-ups'
  .large-6.medium-12.columns= f.input :wallsits, as: :string, label: 'wall sits'
  .large-6.medium-12.columns= f.input :breaths, as: :string, label: 'breaths'
  .large-12.medium-12.columns= f.input :other, as: :string, label: 'other'
- else
  %h5= 'BREAK ACTIVITIES' if @aktion.break_activities_recorded
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.stop)} Stop" if @aktion.stop
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.restroom)} Restroom" if @aktion.restroom
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.water)} Water" if @aktion.water
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.snack)} Snack" if @aktion.snack
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.stretch)} Stretch" if @aktion.stretch
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.tidy)} Tidy Up" if @aktion.tidy
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.games)} Games" if @aktion.games
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.friends)} Friends" if @aktion.friends
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.music)} Music" if @aktion.music
  .large-6.columns.review-item= "#{Aktion.checkmark(@aktion.change)} Change Stuff" if @aktion.change
  .large-6.columns.review-item= "#{@aktion.pushups} Push-ups" if @aktion.pushups && @aktion.pushups != ''
  .large-6.columns.review-item= "#{@aktion.situps} Sit-ups" if @aktion.situps && @aktion.situps != ''
  .large-6.columns.review-item= "#{@aktion.breaths} Breaths" if @aktion.breaths && @aktion.breaths != ''
  .large-6.columns.review-item= "#{@aktion.breaths} Wall Sits" if @aktion.wallsits && @aktion.wallsits != ''
  .large-12.columns.review-item= @aktion.other if @aktion.other
