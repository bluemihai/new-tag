= aktions.count
= I18n.t 'Aktions'
(
- aktions.group_by(&:team_id).each do |key, value|
  = "#{value.count} for Team #{Team.find_by_id(key).name}...  "
)
%hr

- parts_of_day = ['Night', 'Morning', 'Afternoon', 'Evening']

%h4= "Today's Actions (in time zone #{current_player.current_time_zone})"
- Player.todays_grid.in_groups_of(12).each_with_index do |part_of_days_slots, idx|
  .large-3.medium-6.small-12.columns
    %h5.large-12.text-center= parts_of_day[idx]
    - part_of_days_slots.each do |slot|
      - a = Aktion.where(player_id: current_player.id, timeslot: slot).first
      .large-12.columns.action-cell
        %span.red-text= link_to Aktion.current_timeslot(slot).strftime('%H:%M'), a
        - if a
          %span= link_to a.try(:summary_with_focus), edit_aktion_path(current_team, a, edit_finished: true)
        - else
          %span.green-text= link_to 'CREATE...', new_aktion_path(timeslot: slot.in_time_zone(current_player.current_time_zone))

%hr