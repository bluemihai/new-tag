%h2= "#{aktions.try(:count) || 0} #{I18n.t 'Aktions'}"

%table#aktions-table.compact
  %thead
    %tr
      %th Time
      %th Status
      %th Focus
      %th Verb
      %th Team
      %th Role
      %th Int.
      %th Flow
      %th Value
      %th
  %tbody
    - if aktions
      = render aktions
    - else
      = "No Actions"