= simple_form_for(@aktion) do |f|
  = f.error_notification

  .form-inputs.aktion-form
    %h4.large-3.columns
      .commit.text-center COMMIT
      .large-12.columns= f.association :verb, prompt: 'Doing what?', autofocus: true
      .large-12.columns= f.input :focus, placeholder: 'Focus'
      .large-12.columns= f.input :intensity, collection: Aktion.intensities
      .large-12.columns= f.association :role, prompt: 'In what role?'
      .large-12.columns= f.association :project
    %h4.large-3.columns.text-center
      .focus FOCUS
    %h4.large-3.columns.text-center
      .review REVIEW
    %h4.large-3.columns.text-center
      .relax RELAX
    .large-6.small-6= f.association :location, as: :hidden
    .large-6.small-6= f.input :time_zone, selected: Time.now, include_blank: true, as: :hidden
    .large-12= f.input :timeslot, minute_step: 30, use_short_month: true, as: :hidden
    .large-12.medium-12.small-12= f.association :player, include_blank: true, as: :hidden
  
    /
    / = f.input :visible_to
    / %hr
    / = f.input :status
    / = f.input :how_it_went
    / = f.input :flow
    / = f.input :flow_notes
    / = f.input :value
    / = f.input :value_notes
    / = f.input :properties

  .form-actions
    = f.button :submit, "Create #{I18n.t :Aktion}"
    %span.sound-option= link_to 'Ticking', new_team_aktion_path(@current_team, sound_choice: 'ticking')
    %span.sound-option= link_to 'Nature Sounds', new_team_aktion_path(@current_team, sound_choice: 'nature')
    %span.sound-option= link_to 'My Own Music', new_team_aktion_path(@current_team, sound_choice: 'music')
    %span.sound-option= link_to 'Silence', new_team_aktion_path(@current_team, sound_choice: nil)

  = render '/visitors/sounds'
