!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'TAG.com Beta'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'TheActionGame.com'}"}
    = favicon_link_tag
    = stylesheet_link_tag 'application', media: 'all'
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
      .debug-filler &nbsp;
    %main{:role => "main"}
      - if sidebars?
        #sidebar.large-1.medium-2.hide-for-small.group
          - if Aktion.current && Aktion.current != []
            #now= render 'aktions/now'
          = render 'aktions/todays_bar'
        #content.large-10.medium-8.small-12.group
          = render 'layouts/progress_bar'
          = render 'layouts/messages'
          = yield
        #right-sidebar.large-1.medium-2.hide-for-small.group
      - else
        #content.large-12.medium-12.small-12.group
          = render 'layouts/progress_bar'
          = render 'layouts/messages'
          = yield
          .right-sidebar PRIVET
    %footer
      = render '/visitors/sounds' unless params[:controller] == 'visitors' && params[:action] == 'sounds'

