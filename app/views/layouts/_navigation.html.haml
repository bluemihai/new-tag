-# navigation styled for Zurb Foundation 5
-# the syntax for data-topbar may need to change for Zurb Foundation 5
- cp = current_player
%nav.top-bar{"data-topbar" => true}
  %ul.title-area{"data-sound-choice" => "#{params[:sound_choice]}"}
    - if cp
      %li#time{'data-current_action' => cp.current_action, 'data-ticking_volume': cp.ticking_volume || 30, 'data-warning_volume': cp.warning_volume || 70, 'data-commit_length' => cp.try(:commit_length), 'data-review_first' => cp.review_first, 'data-current_player_id' => cp.id}
    - else
      %li#time{'data-current_action' => 'toolate', 'data-ticking_volume': params[:sound_choice] == 'ticking' ? 30 : 0, 'data-warning_volume': 70, 'data-commit_length' => 3, 'data-review_first' => true, 'data-current_player_id' => nil }
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        Menu
  .top-bar-section
    %ul
      = render 'layouts/navigation_links'
