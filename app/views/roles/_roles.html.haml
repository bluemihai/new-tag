%h5
  Roles
  - if team
    = link_to "(New for #{team.name})", new_team_role_path(team)
  - else
    = link_to "(New)", new_role_path

%table#roles-table.compact
  %thead
    %tr
      %th
      %th Name
      %th Tm
      %th Actions
      %th Last Energized
      %th
      %th
      %th

  %tbody
    = render roles, team: team